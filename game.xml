<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/go_to_question"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:text="Question quiz"
            android:textSize="15dp"
            android:drawableTop="@drawable/game1"
            android:padding="60dp"
            android:background="@drawable/gamebutton"/>

        <Button
            android:id="@+id/go_to_baccarat"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:padding="60dp"
            android:text="Game training"
            android:textSize="15dp"
            android:drawableTop="@drawable/game2"
            android:background="@drawable/gamebutton"/>


    </LinearLayout>

</LinearLayout>