<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">



    <Button
        android:id="@+id/introduction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:layout_marginTop="50dp"
        android:text="introduction"
        android:background="@drawable/main_round_button"
        android:drawableStart="@drawable/main1"
        android:paddingLeft="10dp"
        />

    <Button
        android:id="@+id/rule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:layout_marginTop="20dp"
        android:text="Rule learning"
        android:background="@drawable/main_round_button"
        android:drawableStart="@drawable/main2"
        android:paddingLeft="10dp"
        />

    <Button
        android:id="@+id/wagers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:layout_marginTop="20dp"
        android:text="Wagers calculation"
        android:background="@drawable/main_round_button"
        android:drawableStart="@drawable/main3"
        android:paddingLeft="7dp"/>

    <Button
        android:id="@+id/game"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:layout_marginTop="20dp"
        android:text="Game"
        android:background="@drawable/main_round_button"
        android:drawableStart="@drawable/main4"
        android:paddingLeft="10dp"/>


    <Button
        android:id="@+id/leaderboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:layout_marginTop="20dp"
        android:text="leaderboard"
        android:background="@drawable/main_round_button"
        android:drawableStart="@drawable/main5"
        android:paddingLeft="10dp"/>


    <Button
        android:id="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:layout_marginTop="20dp"
        android:text="logout"
        android:background="@drawable/main_round_button"
        android:drawableEnd="@drawable/main6"
        android:paddingEnd="10dp"/>



</LinearLayout>