<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".question"
        tools:showIn="@layout/activity_question">

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="600dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:background="@drawable/nice">


            <ScrollView
                android:layout_width="200dp"
                android:layout_height="205dp"
                android:layout_marginTop="80dp"
                android:layout_gravity="center">
                <TextView
                    android:id="@+id/question_question"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="21sp">
                </TextView>
            </ScrollView>


            <Button
                android:id="@+id/correct"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="correct"
                android:layout_gravity="center"
                android:background="@drawable/main_round_button">
            </Button>

            <Button
                android:id="@+id/incorrect"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="error"
                android:layout_gravity="center"
                android:background="@drawable/main_round_button">
            </Button>


            <ImageView
                android:id="@+id/question_correct"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="-110dp"
                android:layout_gravity="center"
                android:background="@drawable/correct"
                android:visibility="invisible">
            </ImageView>

            <ImageView
                android:id="@+id/question_incorrect"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="-100dp"
                android:layout_gravity="center"
                android:background="@drawable/incorrect"
                android:visibility="invisible">
            </ImageView>

            <ImageView
                android:id="@+id/plus5"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_marginTop="-180dp"
                android:layout_gravity="center"
                android:src="@drawable/plus5"
                android:visibility="invisible">
            </ImageView>

            <ScrollView
                android:layout_width="220dp"
                android:layout_height="100dp"
                android:layout_marginTop="110dp"
                android:layout_marginLeft="60dp">
                <TextView
                    android:id="@+id/question_prompt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FF0000"
                    android:textSize="18sp">
                </TextView>
            </ScrollView>



        </LinearLayout>

        <TextView
            android:id="@+id/question_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:textSize="20dp">
        </TextView>

        <Button
            android:id="@+id/question_next"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/next2"
            android:layout_gravity="center">
        </Button>



    </LinearLayout></ScrollView>